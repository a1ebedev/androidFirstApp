<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:paddingTop="5dp"
    android:paddingBottom="10dp"
    android:background="@drawable/search_item_bg"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_cover_book"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:src="@drawable/javabook"
        tools:ignore="MissingConstraints" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title_book"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Самоучитель JAVA с примерами и программами"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_author_book"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Васильев А."
            android:textColor="@color/purple_700"
            android:textSize="20dp" />

    </LinearLayout>


</LinearLayout>